<style>
  div {
    transition: 0.5s;
    font-weight: bold;
    box-sizing: content-box;
    white-space: nowrap;
    line-height: 1.2;
    user-select: none;
  }

  span:last-of-type {
    display: inline-block;
    opacity: 0;
  }

  div:hover span:last-of-type {
    transition: 0.5s;
    opacity: 1;
  }

  span:first-of-type {
    display: inline-block;
    border: var(--border-width) solid var(--color-primary-130);
    padding: 0 0.75rem;
    margin-inline-end: 0.375rem;
    text-align: center;
    border-radius: var(--border-radius);
  }

  @media (max-width: 480px) {
    span:first-of-type {
      margin-left: 0;
    }
  }

  @media (max-width: 1440px) {
    span:last-of-type {
      display: none;
    }
  }
</style>

