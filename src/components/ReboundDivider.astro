---

type Props = {
  flipHorizontally?: boolean;
  flipVertically?: boolean;
};

const flipHorizontally = Astro.props.flipHorizontally ? -1 : 1;
const flipVertically = Astro.props.flipVertically ? -1 : 1;

---

<style define:vars={{'flip-horizontally': flipHorizontally, 'flip-vertically': flipVertically}}>
  svg {
    width: calc(100% + 1.5px);
    height: auto;
    transform: scaleX(var(--flip-horizontally)) scaleY(var(--flip-vertically));
    fill: var(--divider-fill, #000);
    margin: -1.5px;
  }
</style>

<svg
  width="1e3"
  height="24"
  version="1.1"
  viewBox="0 0 264.58 6.35"
  shape-rendering="geometricPrecision"
  xmlns="http://www.w3.org/2000/svg"
>
