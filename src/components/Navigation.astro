---
import { Image } from "astro:assets";
import type { DataEntryMap } from "astro:content";
import type { Locale } from "../configuration";
import Link from "./Link.astro";

type Props = {
  locale: Locale;
  items: DataEntryMap["navigation"]["topbar"]["data"];
};

const { items, locale } = Astro.props;
---

<style>
  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>

<nav>
  <ul>
    {
      items.map((item) => (
        <li>
          <Link href={item.path}>
            {item.icon ? (
              <Image
                src={item.icon}
                alt={`${item.title[locale]} Icon`}
                width="16"
              />
            ) : null}
            {item.title[locale]}
          </Link>
        </li>
      ))
    }
  </ul>
</nav>
