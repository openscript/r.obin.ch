---
import type { MarkdownLayoutProps } from "astro";
import TableOfContents from "../../components/TableOfContents.astro";

type Props = MarkdownLayoutProps<{
  title: string;
}>;

const { headings, frontmatter } = Astro.props;
---

<style>
  .long-page-section {
    padding: 1.4rem 0;
    display: grid;
    grid-template-columns: 15rem 1fr 15rem;
    grid-template-areas: ". title ." "aside article .";
    gap: 1.4rem;
  }

  aside {
    grid-area: aside;
  }

  aside > :global(*) {
    position: sticky;
    top: 1.4rem;
  }

  article {
    grid-area: article;
    justify-self: center;
    max-width: 50rem;
  }

  h1 {
    grid-area: title;
    text-align: center;
  }
</style>
<div class="long-page-section">
  <aside>
    <TableOfContents headings={headings} />
  </aside>
  <h1>{frontmatter.title}</h1>
  <article>
    <slot />
  </article>
</div>
